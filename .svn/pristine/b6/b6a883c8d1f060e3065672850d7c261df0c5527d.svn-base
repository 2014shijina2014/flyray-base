<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.flyray.merchant.dao.SysOrgDao">

	<select id="queryObject" resultType="me.flyray.merchant.entity.SysOrgEntity">
		select * from sys_org where org_id = #{value}
	</select>
	
	 <select id="queryList" resultType="me.flyray.merchant.entity.SysOrgEntity">
		select * from sys_org 
		<where>
			<if test="roleName != null and orgName.trim() != ''">
				and `org_name` like concat('%',#{orgName},'%') 
			</if>
		</where>
		order by org_id asc 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="queryTotal" resultType="int">
		select count(*) from sys_org
		<where>
			<if test="roleName != null and orgName.trim() != ''">
				and `org_name` like concat('%',#{orgName},'%') 
			</if>
		</where>
	</select>
	
	<insert id="save" parameterType="me.flyray.merchant.entity.SysOrgEntity" useGeneratedKeys="true" keyProperty="orgId">
		insert into sys_org
		(
			`org_id`, 
			`org_no`, 
			`org_name`,
			`parent_id`,
			`create_by`,
			`create_time`,
			`last_update_by`,
			`last_update_time`,
			`org_level`
		)
		values
		(
			#{orgId}, 
			#{orgNo}, 
			#{orgName},
			#{parentId},
			#{createBy},
			#{createTime},
			#{lastUpdateBy},
			#{lastUpdateTime},
			#{orgLevel}
		)
	</insert>
	
	<update id="update" parameterType="me.flyray.merchant.entity.SysOrgEntity">
		update sys_org 
		<set> 
			<if test="orgName != null">`org_name` = #{orgName}, </if>
			<if test="orgNo != null">`org_no` = #{orgNo}</if>
		</set>
		where org_id = #{orgId}
	</update>
	
	<delete id="deleteBatch">
		delete from sys_org where org_id in 
		<foreach item="orgId" collection="array" open="(" separator="," close=")">
			#{orgId}
		</foreach>
	</delete>
	

</mapper>