<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.flyray.rbac.dao.SysOrgDao">

	<select id="queryObject" resultType="me.flyray.rbac.entity.SysOrgEntity">
		select * from sys_org where org_id = #{value}
	</select>

	<select id="queryList" resultType="me.flyray.rbac.entity.SysOrgEntity">
		select * from sys_org order by org_id desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_org 
	</select>
	 
	<insert id="save" parameterType="me.flyray.rbac.entity.SysOrgEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_org
		(
			`org_no`, 
			`org_name`,
			`create_by`,
			`create_time`,
			`last_update_by`,
			`last_update_time`,
			`org_level`
		)
		values
		(
			#{orgNo}, 
			#{orgName},
			#{createBy},
			#{createTime},
			#{lastUpdateBy},
			#{lastUpdateTime},
			#{orgLevel}
		)
	</insert>
	 
	<update id="update" parameterType="me.flyray.rbac.entity.SysOrgEntity">
		update sys_org 
		<set>
			<if test="orgNo != null">`org_no` = #{orgNo}, </if>
			<if test="orgName != null">`org_name` = #{orgName},</if>
			<if test="createBy != null">`create_by` = #{createBy},</if>
			<if test="createTime != null">`create_time` = #{createTime},</if>
			<if test="lastUpdateBy != null">`last_update_by` = #{lastUpdateBy},</if>
			<if test="lastUpdateTime != null">`last_update_time` = #{lastUpdateTime},</if>
			<if test="orgLevel != null">`org_level` = #{orgLevel},</if>
		</set>
		where org_id = #{orgId}
	</update>
	
	<delete id="delete">
		delete from sys_org where org_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_org where org_id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>